@model IEnumerable<Product>
@{
    ViewData["Title"] = "ListView";
}

<h2>Tara Store - Product Catalog</h2>

@foreach(var p in Model)
{
    <div class="card border-primary m-1 p-1">
        <div class="bg-light p-1">
            <h4>
                @p.ModelName
                <span style="float:right">
                    <img src="https://cisweb.biz.colostate.edu/leov/aspcore/images/productthumbnails/@p.Thumbnail" style="max-width:100%"/>
                   @* <img src="~/image/@p.Thumbnail" style="max-width:100%"/>*@
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            @p.Description
            <span class="badge rounded-pill bg-primary" style="float:right">@p.UnitCost.ToString("c")</span>
        </div>
    </div>
}
