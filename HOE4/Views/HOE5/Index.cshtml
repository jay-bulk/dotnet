@model IEnumerable<HandsOnEx4.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Tara Store - Product Catalog</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-info">Add Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryFKNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryFKNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thumbnail)
            </th>
            <th colspan="2" class="text">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ProductPK">@item.ModelName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryFKNavigation.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryFKNavigation.SubCategoryName)
            </td>
            <td>
                <img src="https://cisweb.biz.colostate.edu/leov/aspcore/images/productthumbnails/@item.Thumbnail" height="100" width="100" alt="@item.ModelName" />
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.ProductPK">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.ProductPK">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
