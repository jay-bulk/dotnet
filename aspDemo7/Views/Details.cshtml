@*Demo 7 - Shopping Cart; LV*@

@model Demo7.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Tara Store - Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            Product
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="https://cisweb.biz.colostate.edu/leov/aspcore/images/productpics/@Model.ProductImage" height="100" width="100" alt="@Model.ModelName" />
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.UnitCost.ToString("c")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Availability)
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryFKNavigation.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            Subcategory
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubCategoryFKNavigation.SubCategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AddToCart" asp-route-id="@Model?.ProductPK" class="btn btn-success btn-sm">Add to Cart</a>
    <a asp-action="Search">Back to Search</a>
</div>
