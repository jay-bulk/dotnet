@*Demo 8 - Complete Application; LV;*@

@model Demo8.Models.FilmReview

@{
    ViewData["Title"] = "Edit";
}

<h3>Rockwell Studios - Edit your review of "@ViewData["FilmTitle"]"</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewPK" />
            
            <div class="form-group">
                <label asp-for="ReviewSummary" class="control-label"></label>
                <textarea asp-for="ReviewSummary" class="form-control"></textarea>
                <span asp-validation-for="ReviewSummary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewRating" class="control-label"></label>
                <select asp-for="ReviewRating" class="form-control" asp-items="ViewBag.StarRating"></select>
                <span asp-validation-for="ReviewRating" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Update Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyReviews" asp-controller="Review" class="btn btn-secondary">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
